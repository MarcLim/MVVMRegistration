<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Main.TextInput.Password" parent="@android:style/TextAppearance">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/opa_black_80</item>
        <item name="android:textColorHint">@color/opa_black_80</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="colorControlNormal">@color/opa_black_80</item>
        <item name="colorControlActivated">@color/opa_black_80</item>
        <item name="colorControlHighlight">@color/opa_black_80</item>
    </style>




    <style name="Main.EditText.Style" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/opa_black_80</item>
        <item name="android:textColorHint">@color/opa_black_80</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>



</resources>
